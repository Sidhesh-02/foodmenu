generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model MenuItem {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  toppings    Topping[]
}

model Topping {
  id          String  @id @default(cuid())
  name        String
  price       Float
  menuItemId  String
  @@unique([name,price])
  menuItem    MenuItem @relation(fields: [menuItemId], references: [id])
}

model Order {
  id          String   @id @default(cuid())
  items       Json
  totalPrice  Float
  createdAt   DateTime @default(now())
}